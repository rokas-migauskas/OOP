<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="com.studentregsys.GroupController">
    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10">
        <HBox spacing="10">
            <TextField fx:id="groupNameField" promptText="Group Name" HBox.hgrow="ALWAYS" />
            <Button fx:id="addGroupButton" text="Add Group" onAction="#addStudentGroup" />
            <Button fx:id="removeGroupButton" text="Remove Group" onAction="#removeStudentGroup" />
            <Button fx:id="editGroupButton" layoutX="200" layoutY="200" mnemonicParsing="false" onAction="#editGroup" text="Edit Group" />
        </HBox>
        <ListView fx:id="studentGroupListView" VBox.vgrow="ALWAYS" />
        <Button fx:id="backToMenuButton" text="Back to Menu" onAction="#backToMenu" />
    </VBox>
</AnchorPane>
